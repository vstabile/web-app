                                {#<span class="date-launch">Criada em 07/12/2013 as 23:53</span>#}
                                {#<p class="type-status-history">Concluída</p>#}
                                {#<p class="percent-meta-history"><span>100%</span> da meta</p>#}
                                {#<p class="products-history"><span>99999</span> Produtos <br />Arrecadados</p>#}
                                {#<p class="days-history">R$ 300 EM PRODUTOS</p>#}
                            {#</div><!--history-campaign-->#}
                        </section><!--history-->

                    </section><!--status-->

                </section><!--tab-donors-->
            </div><!--about-->
        </div><!--wrapper-->
    </main>

    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script>
        $(document).ready(function(){
            $(".btn-bottom").click(function(){
                window.location = "{{ path('ong_create_campaign') }}";
            });

            $(".btn-top").click(function(){
                window.location = "{{ path('ong_create_campaign') }}";
            });

            $(function() {
                $( "#tabs" ).tabs();
            });

            $(".logged").click(function(){
                $(".logged-menu").toggle();
            });

        });
    </script>
{% endblock %}