        <script src="{{ asset('bundles/frontend/js/jcarousel.js') }}"></script>
        <script>
            $(document).ready(function(){
                $('.carousel-reviewers')
                        .jcarousel({
                            wrap: 'circular'
                        })
                        .jcarouselAutoscroll({
                            interval: 4998,
                            target: '+=1',
                            autostart: true
                        });

                $(function() {
                    $('.carousel-hero').jcarousel({
                        wrap: 'circular'
                    });


                    $('.carousel-next').jcarouselControl({
                        target: '+=1'
                    });
                });
            });
        </script>
    </body>
</html>